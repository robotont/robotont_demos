<?xml version="1.0" ?>
<launch>
  <arg name="__ns" default=""/>
  <arg name="eval_underscore_bypass" value="$(arg __ns)"/> <!-- As eval may not contain double underscore expressions, a new argument is defined to by-pass this issue. -->
  <arg if="$(eval eval_underscore_bypass == '')" name="prefix" default=''/> <!-- When a namespace is specified, it is also converted into prefix with a trailing underscore. -->
  <arg unless="$(eval eval_underscore_bypass == '')" name="prefix" default="$(arg __ns)_"/>
  <arg name="linear_update" default="0.01"/>
  <arg name="angular_update" default="0.01"/>
  <arg name="cell_size" default="0.01"/>  
  <arg name="depth_topic" default="/camera/aligned_depth_to_color/image_raw"/>
  <group ns="rtabmap">
    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="--delete_db_on_start">
      <param name="frame_id" type="string" value="$(arg prefix)base_footprint"/>
      <param name="odom_frame_id" type="string" value="$(arg prefix)odom"/>
      <remap if="$(eval eval_underscore_bypass == '')" from="rgb/image" to="/camera/color/image_raw"/>
      <remap if="$(eval eval_underscore_bypass == '')" from="depth/image" to="/camera/aligned_depth_to_color/image_raw"/>
      <remap if="$(eval eval_underscore_bypass == '')" from="rgb/camera_info" to="/camera/color/camera_info"/>
      <remap unless="$(eval eval_underscore_bypass == '')" from="rgb/image" to="/$(arg __ns)/camera/color/image_raw"/>
      <remap unless="$(eval eval_underscore_bypass == '')" from="depth/image" to="/$(arg __ns)/camera/aligned_depth_to_color/image_raw"/>
      <remap unless="$(eval eval_underscore_bypass == '')" from="rgb/camera_info" to="/$(arg __ns)/camera/color/camera_info"/>

      <param name="subscribe_depth" type="bool" value="true"/>
      <param name="queue_size" type="int" value="20"/>
        <!-- RTAB-Map's parameters -->
      <param name="RGBD/AngularUpdate" type="string" value="$(arg angular_update)"/>
      <param name="RGBD/LinearUpdate" type="string" value="$(arg linear_update)"/>
      <param name="RGBD/OptimizeFromGraphEnd" type="string" value="false"/>
      <param name="Grid/FromDepth" type="string" value="true"/>
      <param name="Grid/CellSize" type="double" value="$(arg cell_size)"/>
    </node>
  </group>
</launch>
